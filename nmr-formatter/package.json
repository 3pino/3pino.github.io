{
  "name": "nmr-formatter",
  "version": "1.1.0",
  "description": "Web-based tool to format NMR spectral data from free-text input into standardized academic paper format",
  "scripts": {
    "build": "tsc && node scripts/build-browser.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "typescript": "^5.9.2"
  },
  "private": true
}
